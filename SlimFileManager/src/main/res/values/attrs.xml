<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PageIndicator">
        <attr name="selectedColor" format="integer" />
        <attr name="defaultColor" format="integer" />

        <attr name="tabPageIndicatorStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="Icons">
        <attr name="iconColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="Theme">
        <!-- Dialog styles -->
        <attr name="textAppearanceDialogTitle" format="reference"/>
        <attr name="textAppearanceDialogMessage" format="reference"/>
        <attr name="textAppearanceDialogInfo" format="reference"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerPreference">
        <attr name="maxExternal" format="string" />
        <attr name="minExternal" format="string" />
    </declare-styleable>

    <declare-styleable name="Preference">
        <attr name="max" format="integer"/>
        <attr name="min" format="integer" />
        <attr name="defaultValue" format="string|boolean|integer|reference|float" />
    </declare-styleable>

</resources>