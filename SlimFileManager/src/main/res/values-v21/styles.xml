<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionModeBackground">?android:colorPrimary</item>
        <item name="iconColor">@color/icons</item>
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
    </style>

    <style name="ArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="android:Theme.Material">
        <item name="android:colorAccent">@color/accent_dark</item>
        <item name="android:colorPrimary">@color/primary_dark</item>
        <item name="android:colorPrimaryDark">@color/primary_darker</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <item name="android:actionModeBackground">?android:colorPrimary</item>
        <item name="iconColor">@color/icons_dark</item>
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
        <item name="tabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

</resources>
